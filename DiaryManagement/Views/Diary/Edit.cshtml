@model DiaryManagement.Models.Diary

@{
    ViewBag.Title = "Edit";
}

<h2>Edit</h2>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Edit</title>
</head>
<body>
    
    @using (Html.BeginForm("Edit",
                        "Diary",
                        FormMethod.Post,
                        new { enctype = "multipart/form-data" }))
    {        
        @Html.ValidationSummary(true)
    
        <fieldset>
            <legend>Diary</legend>
    
            @Html.HiddenFor(model => model.ID)
    
            <div class="editor-label">
               @Html.LabelFor(model => model.UserId) : @Model.UserId
            </div>
            <div class="editor-field">
                <input type="hidden" value="@Model.UserId" />
                @Html.ValidationMessageFor(model => model.UserId)
            </div>
    
            <div class="editor-label">
                @Html.LabelFor(model => model.Date) :@File.GetLastWriteTime(this.Server.MapPath(this.VirtualPath)).ToString("dd/MM/yyyy") 
            </div>
            <div class="editor-field">
                <input type="text" value="@File.GetLastWriteTime(this.Server.MapPath(this.VirtualPath)).ToString("dd/MM/yyyy")">
                @Html.ValidationMessageFor(model => model.Date)
            </div>
    
            <div class="editor-label">
                @Html.LabelFor(model => model.Notes)
            </div>
            <div class="editor-field" >
                @Html.EditorFor(model => model.Notes)
                @Html.ValidationMessageFor(model => model.Notes)
            </div>
    
            <div class="editor-label">
                @Html.LabelFor(model => model.Image)
            </div>
            <div class="editor-field">
                
                 @{var Image = Model.Image;}
                    <img src="@Url.Content(Model.Image)" height="150" width="200" />
                    <input type="file" name="Image" id="Image" />

                @Html.ValidationMessageFor(model => model.Image)
            </div>
    
            <p>
                <input type="submit" value="Save" />
            </p>
        </fieldset>
    }
    
    <div>
        @Html.ActionLink("Back to List", "Index")
    </div>
</body>
</html>
